<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".period_1">


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:id="@+id/recyclerView_period_1"
        />

    <com.trendyol.bubblescrollbarlib.BubbleScrollBar
        android:id="@+id/bubble_scroll_ber"
        android:layout_gravity="end"
        android:orientation = "vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:bubbleBackground="@drawable/my_scroll"
        app:thumbBackground="@color/black"
        app:scrollbarBackground="#FF0000"
        app:bubbleTextSize="8sp"
        app:bubbleMargin="4dp"
        app:bubbleElevation="8dp"
        android:minWidth="50dp"
        app:bubbleHeight="50dp"
        android:padding="4dp"/>


</FrameLayout>